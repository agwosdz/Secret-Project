
# Piano LED Visualizer Backend - Environment Configuration
# Copy this file to .env and adjust values as needed

# Flask Server Configuration
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_SECRET=your-secret-key-here

# GPIO and Hardware Configuration
# GPIO pin for LED strip (default: 19)
# GPIO_PIN=19

# LED Configuration
# LED_COUNT=245
# LED_BRIGHTNESS=0.8

# Development/Testing Configuration
# Set to True to enable hardware testing without actual GPIO
# MOCK_GPIO=False

# Logging Configuration
# LOG_LEVEL=INFO

# Upload Configuration
# MAX_CONTENT_LENGTH=1048576  # 1MB in bytes
# UPLOAD_FOLDER=uploads

# Performance Configuration
# ENABLE_PERFORMANCE_MONITORING=False